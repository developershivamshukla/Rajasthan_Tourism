<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/jaipur_bg"
                android:gravity="bottom|center"
                android:scaleType="centerCrop"
                android:text="Jaipur"
                android:textColor="@android:color/white"
                android:textSize="35sp"
                android:textStyle="bold"
                android:fontFamily="@font/secular_one"/>

            <TextView
                android:id="@+id/imageView2"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/udaipur"
                android:textStyle="bold"
                android:text="Udaipur"
                android:gravity="center|bottom"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:fontFamily="@font/secular_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView3"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:textStyle="bold"
                android:text="Jodhpur"
                android:gravity="center|bottom"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:background="@drawable/jodhpur_bg"
                android:fontFamily="@font/secular_one"/>

            <TextView
                android:id="@+id/imageView4"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/pushkar"
                android:text="Pushkar"
                android:gravity="center|bottom"
                android:textSize="35sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:fontFamily="@font/secular_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView5"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/chittorgarh_bg"
                android:text="Chitorgarh"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="34sp"
                android:gravity="center|bottom"
                android:fontFamily="@font/secular_one"/>

            <TextView
                android:id="@+id/imageView6"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/bikaner"
                android:text="Bikaner"
                android:textSize="35sp"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:gravity="center|bottom"
                android:fontFamily="@font/secular_one"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imageView7"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:background="@drawable/ajmer"
                android:text="Ajmer"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="35sp"
                android:gravity="center|bottom"
                android:fontFamily="@font/secular_one"/>

            <TextView
                android:id="@+id/imageView8"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:scaleType="centerCrop"
                android:background="@drawable/kota"
                android:text="Kota"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="35sp"
                android:fontFamily="@font/secular_one"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>